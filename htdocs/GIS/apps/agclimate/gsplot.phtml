</div>
</div>
EOM;
$t->jsextra = <<<EOM
<script src="/vendor/openlayers/{$OL}/ol.js"></script>
<script src="/vendor/openlayers/{$OL}/ol-layerswitcher.js"></script>
<script src="gsplot.js?v=7"></script>
EOM;
$t->render('single.phtml');
