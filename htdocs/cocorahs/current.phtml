   and day >= '${first_of_month}-01' GROUP by id";
 $rs = pg_exec($dbconn, $sql);
 $monthDict = Array();
 for( $i=0; $row = @pg_fetch_array($rs,$i); $i++){ 
   $monthDict[ $row["id"] ] = Array("accum" => round($row["pmonth"],2), "missing" => $row["missing"] );
 }

