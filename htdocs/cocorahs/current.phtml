 /* Compute monthly rainfall totals! */
 $dbconn = iemdb("access");
 $year = date("Y");
 $first_of_month = date("Y-m");
 $sql = "SELECT id, 
   sum(case WHEN pday < 0 THEN 0 ELSE pday END) as pmonth, 
