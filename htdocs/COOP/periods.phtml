 $emonth = isset($_GET["emonth"]) ? intval($_GET["emonth"]): 0;
 $sday = isset($_GET["sday"]) ? intval($_GET["sday"]): 0;
 $eday = isset($_GET["eday"]) ? intval($_GET["eday"]): 0;
 $sortcol = isset($_GET["sortcol"]) ? $_GET["sortcol"] : "avg_high";
