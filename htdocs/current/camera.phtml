$network = isset($_GET["network"]) ? xssafe($_GET["network"]) : "KCCI";

$ts = time();
if ($isarchive) {
    $radts = mktime($hour, $minute, 0, $month, $day, $year) - (($minute % 5) * 60);
} else {
    $radts = time();
}
$num = 1;
if ($network == "KCRG") {
    $cameras["KCCI-017"]["network"] = "KCRG";
